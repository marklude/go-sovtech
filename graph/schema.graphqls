# SOVTECH GraphQL schema Star Wars wrapper

# People from Star Wars
type People {
  name: String!
  height: String
  mass: String
  gender: String!
  homeworld: String
}

# All query for people in Star wars
type Query {
  peoples(first: Int): [People!]!
  peopleByName(name: String!): People
}

input NewUser {
  username: String!
}

type Token {
  jwtToken: String!
}

# Mutation for  JWT Auth
type Mutation {
  authentication(input: NewUser!): Token!
}
